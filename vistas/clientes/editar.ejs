<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar</title>
    <%- include('../general/cabezera.ejs') %>
</head>
<body>
    <h2>editar</h2>
    <% if(cliente){ %>
    <form action="/editar" method="post">
        <input type="text" hidden value="<%= cliente.id %>" id="txtid" name="txtid">
        <label for="txtnom">Nombre</label>
        <input type="text" id="txtnom" name="txtnom" value="<%= cliente.nombreCli %>">
        <br>
        <label for="txtape">Apellido</label>
        <input type="text" id="txtape" name="txtape" value="<%= cliente.apellidoCli %>">
        <br>
        <label for="txtdoc">Numero de Documento</label>
        <input type="number" id="txtdoc" name="txtdoc" value="<%= cliente.numeroDoc %>">
        <br>
        <button type="submit" id="btnagregar" name="btnagregar">Editar</button>
        <a href="/" type="btn">cancelar</a>
    </form>
    <% } %>
    <%- include('../general/pie.ejs') %>
</body>
</html>